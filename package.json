{
  "name": "@emmanuelgautier/validate-json-action",
  "description": "GitHub Actions for validating JSON files with JSON Schema",
  "version": "0.0.0",
  "author": "Emmanuel Gautier <npm@emmanuelgautier.fr>",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/emmanuelgautier/validate-json#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmanuelgautier/validate-json.git"
  },
  "bugs": {
    "url": "https://github.com/emmanuelgautier/validate-json/issues"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JSON",
    "JSON Schema",
    "Validation"
  ],
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "exports": {
    ".": "./dist/index.js"
  },
  "dependencies": {
    "@actions/core": "3.0.0",
    "ajv": "8.17.1",
    "glob": "13.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "2.0.2",
    "@github/local-action": "7.0.0",
    "@jest/globals": "30.2.0",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-typescript": "12.3.0",
    "@types/jest": "30.0.0",
    "@types/node": "24",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "10.0.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.12.1",
    "eslint-plugin-prettier": "5.5.5",
    "jest": "30.2.0",
    "make-coverage-badge": "1.2.0",
    "prettier": "3.8.1",
    "prettier-eslint": "16.4.2",
    "rollup": "4.57.1",
    "ts-jest": "29.4.6",
    "ts-jest-resolver": "2.0.1",
    "typescript": "5"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
